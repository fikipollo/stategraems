{
    "id": "experiment-form",
    "content": [
        {
            "name": "section_1",
            "title": "General details",
            "fields": [
                {
                    "name": "experiment_id",
                    "label": "Experiment ID",
                    "type": "display"
                },
                {
                    "name": "title",
                    "label": "Title",
                    "type": "text",
                    "required": true
                },                
                {
                    "name": "experiment_description",
                    "label": "Description",
                    "type": "textarea",
                    "required": true
                },
                {
                    "name": "public_references",
                    "label": "Public references",
                    "type": "textarea"
                }
            ]
        },

        {
            "name": "section_2",
            "title": "Data storage",
            "fields": [
                {
                    "name": "data_dir_type",
                    "label": "Data directory",
                    "type": "select",
                    "free": false,
                    "options": [{
                            "value": "local_dir",
                            "label": "Local directory (in server)"
                        }, {
                            "value": "ftp_dir",
                            "label": "FTP directory"
                        }, {
                            "value": "irods_dir",
                            "label": "iRODS directory"
                        }, {
                            "value": "seeddms_dir",
                            "label": "SeedDMS directory"
                        }, {
                            "value": "none",
                            "label": "None"
                        }],
                    "required": true
                },
                {
                    "name": "data_dir_host",
                    "label": "Host",
                    "type": "text",
                    "required": "model.data_dir_type.search('none|local_dir') < 0",
                    "dependency": "data_dir_type.search('none|local_dir') < 0"
                },
                {
                    "name": "data_dir_port",
                    "label": "Port number",
                    "type": "text",
                    "required": "model.data_dir_type.search('none|local_dir') < 0",
                    "dependency": "data_dir_type.search('none|local_dir') < 0"
                },
                {
                    "name": "data_dir_user",
                    "label": "User",
                    "type": "text",
                    "required": "model.data_dir_type.search('none|local_dir') < 0",
                    "dependency": "data_dir_type.search('none|local_dir') < 0"
                },
                {
                    "name": "data_dir_pass",
                    "label": "Password",
                    "type": "password",
                    "required": "model.data_dir_type.search('none|local_dir') < 0",
                    "dependency": "data_dir_type.search('none|local_dir') < 0"
                },
                {
                    "name": "data_dir_path",
                    "label": "Path",
                    "type": "text",
                    "required": "model.data_dir_type !== 'none'",
                    "dependency": "data_dir_type !== 'none'"
                }
            ]
        },
        {
            "name": "section_3",
            "title": "Experimental design",
            "fields": [
                {
                    "name": "tags",
                    "label": "Experiment tags",
                    "type": "tag",
                    "options": [
                        {
                            "key": 1,
                            "value": "Birth cohort"
                        },                            
                        {
                            "key": 2,
                            "value": "Case-Control"
                        },
                        {
                            "key": 3,
                            "value": "Cohort"
                        },
                        {
                            "key": 4,
                            "value": "Cross-sectional"
                        },
                        {
                            "key": 5,
                            "value": "Disease specific"
                        },
                        {
                            "key": 6,
                            "value": "Longitudinal"
                        },
                        {
                            "key": 7,
                            "value": "Multiple conditions"
                        },
                        {
                            "key": 8,
                            "value": "Other"
                        },
                        {
                            "key": 9,
                            "value": "Population-based"
                        },
                        {
                            "key": 10,
                            "value": "Quality control"
                        },
                        {
                            "key": 11,
                            "value": "Single condition"
                        },
                        {
                            "key": 12,
                            "value": "Survival"
                        },
                        {
                            "key": 13,
                            "value": "Time course"
                        },
                        {
                            "key": 14,
                            "value": "Twin study"
                        }
                    ],
                    "popular": [
                        {
                            "key": 1,
                            "value": "Case-Control"
                        },
                        {
                            "key": 2,
                            "value": "Multiple conditions"
                        },
                        {
                            "key": 3,
                            "value": "Single condition"
                        },
                        {
                            "key": 4,
                            "value": "Survival"
                        },
                        {
                            "key": 5,
                            "value": "Time course"
                        }
                    ]
                }
            ]
        },
        {
            "name": "section_4",
            "title": "Other information",
            "fields": [
                {
                    "name": "experiment_owners",
                    "label": "Owners",
                    "type": "user_selector"
                },
                {
                    "name": "experiment_members",
                    "label": "Members",
                    "type": "user_selector"
                },
                {
                    "name": "submission_date",
                    "label": "Submission date",
                    "type": "date"
                },
                {
                    "name": "last_edition_date",
                    "label": "Last edition",
                    "type": "date"
                }
            ]
        }
    ]
}

{
    "id": "experiment-form",
    "content": [
        {
            "name": "section_1",
            "title": "General details",
            "fields": [
                {
                    "name": "experiment_id",
                    "label": "Study ID",
                    "type": "display",
                    "help": "Identify uniquely the study in the database.<i>[Autogenerated]</i>."
                },
                {
                    "name": "title",
                    "label": "Title",
                    "type": "text",
                    "required": true,
                    "help": "<b>[required]</b>Title of the study as would be used in a publication."
                },                
                {
                    "name": "experiment_description",
                    "label": "Description",
                    "type": "textarea",
                    "required": true,
                    "help": "<b>[required]</b>An introduction to the project to present briefly the goals, method and conclusions drawn from the research."
                },
                {
                    "name": "public_references",
                    "label": "Public references",
                    "type": "textarea",
                    "help": "Some related and useful external resources."
                }
            ]
        },

        {
            "name": "section_2",
            "title": "Data storage",
            "fields": [
                {
                    "name": "data_dir_type",
                    "label": "Data directory",
                    "type": "select",
                    "free": false,
                    "options": [{
                            "value": "local_dir",
                            "label": "Local directory (in server)"
                        }, {
                            "value": "none",
                            "label": "None"
                        }],
                    "required": true,
                    "help": "The location for the files produced during the experiment (e.g. the raw data files, the processed files, etc.). Files can be stored in the same machine in which the EMS is running (local directory) or in a third storage system such as a FTP server, an iRODS server or a SeedDMS system."
                },
                {
                    "name": "data_dir_host",
                    "label": "Host",
                    "type": "text",
                    "required": "model.data_dir_type.search('none|local_dir') < 0",
                    "dependency": "data_dir_type.search('none|local_dir') < 0",
                    "help": "The URL for the remote storage system (i.e. FTP server, iRODS server or SeedDMS system). E.g. <i>ftp://myserver.com</i>"
                },
                {
                    "name": "data_dir_port",
                    "label": "Port number",
                    "type": "text",
                    "required": "model.data_dir_type.search('none|local_dir') < 0",
                    "dependency": "data_dir_type.search('none|local_dir') < 0",
                    "help": "The port for the remote storage system. E.g. <i>22</i>"
                },
                {
                    "name": "data_dir_user",
                    "label": "User",
                    "type": "text",
                    "required": "model.data_dir_type.search('none|local_dir') < 0",
                    "dependency": "data_dir_type.search('none|local_dir') < 0",
                    "help": "A valid username for the remote storage system with read and write rights."
                },
                {
                    "name": "data_dir_pass",
                    "label": "Password",
                    "type": "password",
                    "required": "model.data_dir_type.search('none|local_dir') < 0",
                    "dependency": "data_dir_type.search('none|local_dir') < 0",
                    "help": "The password for the user in the remote storage system."
                },
                {
                    "name": "data_dir_path",
                    "label": "Path",
                    "type": "text",
                    "required": "model.data_dir_type !== 'none'",
                    "dependency": "data_dir_type !== 'none'",
                    "help": "The path to the directory that contains the files in the selected storage system. E.g. /data/stategraems_data/remote_files/"
                }
            ]
        },
        {
            "name": "section_3",
            "title": "Experimental design",
            "help": "Add tags to provide an overall description for the design of the study.",
            "fields": [
                {
                    "name": "tags",
                    "label": "Study tags",
                    "type": "tag",
                    "options": [
                        {
                            "key": 1,
                            "value": "Birth cohort"
                        },                            
                        {
                            "key": 2,
                            "value": "Case-Control"
                        },
                        {
                            "key": 3,
                            "value": "Cohort"
                        },
                        {
                            "key": 4,
                            "value": "Cross-sectional"
                        },
                        {
                            "key": 5,
                            "value": "Disease specific"
                        },
                        {
                            "key": 6,
                            "value": "Longitudinal"
                        },
                        {
                            "key": 7,
                            "value": "Multiple conditions"
                        },
                        {
                            "key": 8,
                            "value": "Other"
                        },
                        {
                            "key": 9,
                            "value": "Population-based"
                        },
                        {
                            "key": 10,
                            "value": "Quality control"
                        },
                        {
                            "key": 11,
                            "value": "Single condition"
                        },
                        {
                            "key": 12,
                            "value": "Survival"
                        },
                        {
                            "key": 13,
                            "value": "Time course"
                        },
                        {
                            "key": 14,
                            "value": "Twin study"
                        }
                    ],
                    "popular": [
                        {
                            "key": 1,
                            "value": "Case-Control"
                        },
                        {
                            "key": 2,
                            "value": "Multiple conditions"
                        },
                        {
                            "key": 3,
                            "value": "Single condition"
                        },
                        {
                            "key": 4,
                            "value": "Survival"
                        },
                        {
                            "key": 5,
                            "value": "Time course"
                        }
                    ]
                }
            ]
        },
        {
            "name": "section_4",
            "title": "Other information",
            "fields": [
                {
                    "name": "experiment_owners",
                    "label": "Owners",
                    "type": "user_selector",
                    "help": "<b>[required]</b> Only owners can edit the information of the study."
                },
                {
                    "name": "experiment_members",
                    "label": "Members",
                    "type": "user_selector",
                    "help": "Members can add /edit/remove samples and analysis to study but they can not edit the information of the study."
                },
                {
                    "name": "submission_date",
                    "label": "Submission date",
                    "type": "date",
                    "help": "<b>[required]</b> Date when this information was added."
                },
                {
                    "name": "last_edition_date",
                    "label": "Last edition",
                    "type": "date",
                    "help": "<b>[required]</b> Date when this information was last edited."
                }
            ]
        }
    ]
}
